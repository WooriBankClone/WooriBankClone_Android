<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/bg_month"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/btn_radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:layout_marginLeft="16dp"
            android:layout_weight="0"
            android:text=" 1개월"
            android:textSize="12sp"
            android:textColor="@drawable/custom_radio_textcolor"
            android:button="@null"
            android:drawableLeft="@drawable/custom_radiobutton"
            android:drawablePadding="4dp"/>

        <RadioButton
            android:id="@+id/btn_radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:text="3개월"
            android:textSize="12sp"
            android:textColor="@drawable/custom_radio_textcolor"
            android:button="@null"
            android:drawableLeft="@drawable/custom_radiobutton"
            android:drawablePadding="4dp"/>

        <RadioButton
            android:id="@+id/btn_radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:text="9개월"
            android:textSize="12sp"
            android:textColor="@drawable/custom_radio_textcolor"
            android:button="@null"
            android:drawableLeft="@drawable/custom_radiobutton"
            android:drawablePadding="4dp"/>

        <RadioButton
            android:id="@+id/btn_radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:text="12개월"
            android:textSize="12sp"
            android:textColor="@drawable/custom_radio_textcolor"
            android:button="@null"
            android:drawableLeft="@drawable/custom_radiobutton"
            android:drawablePadding="4dp"/>
    </RadioGroup>


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/story_btn_calendar" />
</androidx.constraintlayout.widget.ConstraintLayout>