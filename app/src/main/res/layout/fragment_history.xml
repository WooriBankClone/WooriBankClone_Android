<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ab_history_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/app_toolbar"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:titleTextColor="@android:color/white"
            app:layout_scrollFlags="scroll|enterAlways">
            <TextView
                android:id="@+id/tv_history_ac_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스무살우리 통장"
                android:textSize="16dp"
                android:textColor="@color/bg_month"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_history_ac_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000-111-222222"
                android:textSize="15dp"
                android:textColor="@color/bg_month"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_history_ac_name"
                app:layout_constraintStart_toStartOf="@id/tv_history_ac_name"/>
            <TextView
                android:id="@+id/tv_history_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="잔액 29,243 원"
                android:textSize="20dp"
                android:textColor="@color/bg_month"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintEnd_toEndOf="@+id/iv_history_graph"
                app:layout_constraintBottom_toTopOf="@id/iv_history_graph"/>
            <ImageView
                android:id="@+id/iv_history_graph"
                android:layout_width="102dp"
                android:layout_height="42dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="17dp"
                android:src="@drawable/history_btn_graph"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <include
        android:id="@+id/cst_history_radio"
        layout="@layout/fragment_history_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toBottomOf="@+id/ab_history_top"/>

    <!--<androidx.fragment.app.FragmentContainerView
        android:id="@+id/frag_history_radio"
        layout="@layout/fragment_history_radio"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_month"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_history_top">
    </androidx.fragment.app.FragmentContainerView>-->

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frag_history_bottom"
        android:layout_width="match_parent"
        android:layout_height="594dp"
        android:background="@color/bg"
        android:layout_marginTop="210dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_history_radio">

        <!--<androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />-->
    </androidx.fragment.app.FragmentContainerView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>